---
import { getCollection } from "astro:content";

const indices = await getCollection("indices");
const pages = await getCollection("pages");
---

<style lang="scss">
  .sidebar {
    position: relative;
    overflow-y: auto;
    width: 18.75rem;
    height: 100vh;
    z-index: 10;
  }

  ul {
    list-style: none;
    padding-left: 0;
  }
</style>

<aside class="sidebar">
  <h1>OpenAQ AQI Hub</h1>
  <nav class="pages-nav">
    <ul>
      {
        pages.map((o) => (
          <li>
            <a href={`/${o.id}`}>{o.data.title}</a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class="indices-nav">
    <ul>
      {
        indices.map((o) => (
          <li>
            <a href={`/indices/${o.id}`}>{o.data.name}</a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>
