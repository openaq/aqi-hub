---
import PageLayout from "@layouts/PageLayout.astro";
import { getEntry } from "astro:content";
import { render } from "astro:content";
import PiecewiseResult from "@components/PiecewiseResult";

const homepage = await getEntry("pages", "index");
if (!homepage) {
  throw new Error("Could not find homepage");
}

const { Content } = await render(homepage);
---

<PageLayout>
  <PiecewiseResult client:only="solid" pollutant="PM2.5" />
  <PiecewiseResult client:only="solid" pollutant="PM10" />
  <Content />
</PageLayout>
